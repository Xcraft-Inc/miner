{
  "name": "xcraft-miner",
  "versionFrom": "goblin-miner",
  "description": "Xcraft Miner",
  "appCompany": "epsitec",
  "appId": "miner",
  "appBin": "node_modules/xcraft-core-host/bin/host",
  "xcraft": {
    "xcraft-core-cryo": {
      "enableFTS": true
    },
    "xcraft-core-goblin": {
      "enableCryo": true
    },
    "xcraft-core-host": {
      "mainQuest": "appMiner.init",
      "appOptions": {
        "type": {
          "alias": "t",
          "describe": "Type of input directory (project)",
          "choices": ["xcraft", "dotnet"],
          "type": "string",
          "default": "xcraft"
        },
        "authKey": {
          "alias": "k",
          "describe": "Authentification key",
          "type": "string"
        },
        "input": {
          "alias": "i",
          "describe": "Input directory to analyze",
          "type": "string"
        },
        "output": {
          "alias": "o",
          "describe": "Output file (the file name must follows the instruction name)",
          "type": "string"
        }
      }
    },
    "xcraft-core-server": {
      "modules": ["goblin-miner"]
    },
    "xcraft-core-transport": {
      "backends": ["ee"]
    },
    "goblin-miner": {
      "agent": {
        "provider": "open-ai",
        "model": "anthropic/claude-sonnet-4",
        "host": "https://openrouter.ai/api/v1"
      },
      "inference": {
        "temperature": 0.2,
        "seed": 21121871
      }
    }
  }
}
