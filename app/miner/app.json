{
  "name": "xcraft-miner",
  "productName": "Xcraft Miner",
  "versionFrom": "goblin-miner",
  "description": "Xcraft Miner",
  "appCompany": "epsitec",
  "appId": "miner",
  "appBin": {
    "xcraft-miner": "bin/miner"
  },
  "xcraft": {
    "xcraft-core-cryo": {
      "enableFTS": true
    },
    "xcraft-core-goblin": {
      "enableCryo": true
    },
    "xcraft-core-host": {
      "mainQuest": "appMiner.init",
      "appOptions": {
        "type": {
          "alias": "t",
          "describe": "Type of input directory (project)",
          "choices": ["xcraft", "dotnet"],
          "type": "string",
          "default": "xcraft"
        },
        "provider": {
          "alias": "p",
          "describe": "AI provider",
          "choices": ["open-ai", "ollama"],
          "type": "string",
          "default": "open-ai"
        },
        "model": {
          "alias": "m",
          "describe": "AI model",
          "type": "string",
          "default": "anthropic/claude-sonnet-4"
        },
        "host": {
          "alias": "H",
          "describe": "AI host",
          "type": "string",
          "default": "https://openrouter.ai/api/v1"
        },
        "authKey": {
          "alias": "k",
          "describe": "AI authentification key",
          "type": "string"
        },
        "temperature": {
          "alias": "T",
          "describe": "AI temperature (advanced)",
          "type": "number",
          "default": 0.2
        },
        "seed": {
          "alias": "s",
          "describe": "AI seed (advanced)",
          "type": "number",
          "default": 21121871
        },
        "input": {
          "alias": "i",
          "describe": "Input directory to analyze",
          "type": "string"
        },
        "output": {
          "alias": "o",
          "describe": "Output file (the file name must follows the instruction name)",
          "type": "string"
        }
      }
    },
    "xcraft-core-server": {
      "modules": ["goblin-miner"]
    },
    "xcraft-core-transport": {
      "backends": ["ee"]
    },
    "goblin-miner": {
      "agent": {
        "provider": "open-ai",
        "model": "anthropic/claude-sonnet-4",
        "host": "https://openrouter.ai/api/v1"
      },
      "inference": {
        "temperature": 0.2,
        "seed": 21121871
      }
    }
  }
}
